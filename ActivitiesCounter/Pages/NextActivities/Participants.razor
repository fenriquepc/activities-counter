<table class="table table-dark table-borderless table-hover">
	<tbody>

	@for (var i = 0; i < Activity.Participants.Count; i++)
	{
		<tr>
			<th scope="row">@(i+1)</th>
			<td>@Activity.Participants.ElementAt(i)</td>
		</tr>
	}
	</tbody>
</table>

@code {
	[Parameter]
	public Activity Activity { get; set; }
}
